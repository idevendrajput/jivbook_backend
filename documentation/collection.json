          "    pm.request.headers.add({",
          "        key: 'Authorization',",
          "        value: 'Bearer ' + pm.globals.get('authToken')",
          "    });",
          "}"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Auto-extract token from auth responses",
          "if (pm.response.json() && pm.response.json().data && pm.response.json().data.token) {",
          "    pm.globals.set('authToken', pm.response.json().data.token);",
          "    pm.globals.set('userId', pm.response.json().data.user._id);",
          "    console.log('Auth token saved:', pm.response.json().data.token);",
          "}"
        ],
        "type": "text/javascript"
      }
    }
